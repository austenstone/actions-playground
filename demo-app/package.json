{
  "name": "github-actions-sdlc-demo",
  "version": "1.0.0",
  "description": "Demo application for GitHub Actions SDLC workflow",
  "main": "dist/index.js",
  "scripts": {
    "build": "node build.js",
    "test": "vitest run --coverage",
    "test:unit": "vitest run --coverage tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:shard": "vitest run --reporter=blob",
    "test:merge": "vitest --merge-reports",
    "lint": "eslint src/ --cache",
    "start": "node dist/index.js"
  },
  "keywords": ["github-actions", "ci-cd", "demo", "devops"],
  "author": "GitHub Actions Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "vitest": "^4.0.13",
    "@vitest/coverage-v8": "^4.0.13"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "redis": "^4.6.12"
  }
}
